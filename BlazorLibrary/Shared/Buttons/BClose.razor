@inherits ButtonDefault

<button disabled="@(IsProcessing?"disabled":null)" type="button" hotkey="@(!string.IsNullOrEmpty(HotKey)?HotKey:null)" @onclick="OnClick" class="btn btn@(IsOutline==true?"-outline":"")-dark @(TextWrap==true?"text-wrap":"text-nowrap") @AddClass">@_content</button>

@code {
    public new bool? IsOutline = true;

    public new string? HotKey = KeyCode.Escape;

    protected override void OnInitialized()
    {
        Text = Rep["Close"];
    }
}
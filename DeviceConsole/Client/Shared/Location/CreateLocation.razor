<ModalDialog Title="@TitleError" ButtonCloseEvent="Close">
    <BodyContent>
        @if (Model != null)
        {
            <form id="createlocation" @onsubmit="SaveLocation">

                @*местоположение*@
                <div class="mb-3">
                    <label class="form-label">@GsoRep["IDS_STRING_LOCATION"]</label>
                    <InputFocus @bind-Value="Model.SzName" />
                </div>
                <hr />
                @*Кода для установления входящего соединения*@
                <b>@DeviceRep["CodeSetConnection"]</b>
                @*Код страны*@
                <div class="mb-3">
                    <label class="form-label">@DeviceRep["CountryCode"]</label>
                    <input type="number" max="9999" class="form-control" @bind="Model.SzRegion">
                </div>

                @*Код города*@
                <div class="mb-3">
                    <label class="form-label">@DeviceRep["CityCode"]</label>
                    <input type="number" max="99999999" class="form-control" @bind="Model.SzCity">
                </div>
                @*Абонентский номер ведомственной ТС*@
                <div class="mb-3">
                    <label class="form-label">@DeviceRep["LocalATSCode"]</label>
                    <input type="tel" max="99999999" class="form-control" @bind="Model.SzLocalATS">
                </div>
                <hr />
                @*Префиксы для исходящего соединения*@
                <b>@DeviceRep["Prefixes"]</b>
                @*Выход на международную линию*@
                <div class="mb-3">
                    <label class="form-label">@DeviceRep["InterNationalPrefix"]</label>
                    <input type="text" maxlength="3" class="form-control" @bind="Model.SzInterNationalPrefix">
                </div>
                @*Выход на АМТС*@
                <div class="mb-3">
                    <label class="form-label">@DeviceRep["InterUrbanPrefix"]</label>
                    <input type="text" maxlength="3" class="form-control" @bind="Model.SzInterUrbanPrefix">
                </div>
                @*Выход на городскую линию*@
                <div class="mb-3">
                    <label class="form-label">@DeviceRep["LocalCallPrefix"]</label>
                    <input type="text" maxlength="4" class="form-control" @bind="Model.SzLocalCallPrefix">
                </div>

            </form>
        }
        else
        {
            <PLoad />
        }
    </BodyContent>
    <ButtonContent>
        <BSumbit FormId="createlocation" IsProcessing="IsProcessing"/>
        <BCancel OnClick="Close" />
    </ButtonContent>
</ModalDialog>

